<main_ui_window>
    BoxLayout: 
        orientation: "vertical"
        width: root.width
        height: root.height
        spacing: "10dp"

        Label:
            id: calc_label
            text: root.calc_label
            size_hint_y: None
            font_size: "75sp"
            text_size: self.size
            halign: "right"
            background_color: .85,1,.85,1
#            font_name: "digital7"
            canvas.before: 
                Color:
                    rgba: self.background_color
                Rectangle: 
                    size: self.size
                    pos: self.pos
            color: (0,0,0,1)

        GridLayout: 
            cols: 2
            size_hint_y: None
            height: self.minimum_height
            spacing: "10dp"

            Button: 
                text: "Backspace"
                size_hint_y: None
                height: "50dp"
                on_press: root.backspace()
                background_normal: ""
                background_color: root.buttonbg

            Button: 
                text: "Reset"
                size_hint_y: None
                height: "50dp"
                on_press: root.reset()
                background_normal: ""
                background_color: root.buttonbg
        
        GridLayout:
            cols: 5
            size: root.size
            spacing: "5dp"

            Button:
                id: 7
                text: "7"
                on_press: root.update_label("7")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: 8
                text: "8"
                on_press: root.update_label("8")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: 9
                text: "9"
                on_press: root.update_label("9")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: divide
                text: "/"
                on_press: root.operator("/")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: square_root
                text: "SQT"
                on_press: root.square()
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: 4
                text: "4"
                on_press: root.update_label("4")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: 5
                text: "5"
                on_press: root.update_label("5")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: 6
                text: "6"
                on_press: root.update_label("6")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: multiply
                text: "*"
                on_press: root.operator("*")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: percent
                text: "%"
                on_press: root.percent()
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: 1
                text: "1"
                on_press: root.update_label("1")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: 2
                text: "2"
                on_press: root.update_label("2")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: 3
                text: "3"
                on_press: root.update_label("3")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: minus
                text: "-"
                on_press: root.operator("-")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: 1_x
                text: "1/x"
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: 0
                text: "0"
                on_press: root.update_label("0")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: plus_minus
                text: "+/-"
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: decimal
                text: "."
                on_press: root.update_label(".")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: plus
                text: "+"
                on_press: root.operator("+")
                background_normal: ""
                background_color: root.buttonbg

            Button:
                id: equals
                text: "="
                on_press: root.equals()
                background_normal: ""
                background_color: root.buttonbg

        Button: 
            text: "About" 
            size_hint_y: None
            height: "50dp"
            on_press: root.open_about_window()
            background_normal: ""
            background_color: root.buttonbg
